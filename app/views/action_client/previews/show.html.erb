<%= link_to action_client_engine.client_path(client) do %>
  <%= client.client_name %>
<% end %>

<h1>
  <%= client.client_name %>#<%= preview.action_name %>
</h1>

<h2>
  cURL
</h2>

<pre>
curl \
  --request <%= preview.request.method.to_s.upcase %> \
  <% preview.request.headers.each do |key, value| %>
  --header "<%= key %>: <%= value %>" \
  <% end %>
  --data '<%= preview.request.body.strip %>' \
  <%= preview.request.uri %>
</pre>

<h2>
  HTTP Action
</h2>

<pre>
<%= preview.request.method.to_s.upcase %> <%= preview.request.uri %>
</pre>

<h2>
  Headers
</h2>

<pre>
  <% preview.request.headers.each do |key, value| %>
<%= key %>: <%= value %>
  <% end %>
</pre>

<h2>
  Body
</h2>

<pre>
<%= JSON.pretty_generate(JSON.parse(preview.request.body)) %>
</pre>
